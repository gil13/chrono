<div class="row">
	<div class="col s12 m12 l12">

		<p>Hola, {{model}}</p>
	
		<p>{{hour}}:{{min}}:{{sec}}</p>
	</div>	
	
	<div class="center" style="padding: 5px 5px;">
		<a class="waves-effect waves-light btn {{btnStartDisabled}}" {{action 'start'}} style="
    width: 100%;">Start</a>
	</div>	
	<div class="center" style="padding: 5px 5px;">	
		<a class="waves-effect waves-light btn {{btnStopDisabled}}" {{action 'stop'}} style="
    width: 100%;">Stop</a>
	</div>	
	<div class="center" style="padding: 5px 5px;">
		<a class="waves-effect waves-light btn {{btnResetDisabled}}" {{action 'reset'}} style="
    width: 100%;">Reset</a>
	</div>	
	<div class="center" style="padding: 5px 5px;">
		<a class="waves-effect waves-light btn {{btnSaveDisabled}}" {{action 'save'}} style="
    width: 100%;">Save</a>
	</div>	

</div>



